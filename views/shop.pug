doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{docTitle}
        link(rel="stylesheet", href="/css/main.css")
    body 
        header.main-header 
            nav.main-header__nav
                ul.main-header__item-list 
                    li.main-header__item 
                        a.active(href="/") Shop
                    li.main-header__item 
                        a.active(href="/admin/add-product") Add Product
        main 
            if prods.length > 0
                .grid 
                    each product in prods
                        article.card.product-item 
                            header.card__header 
                                h1.product__title #{product.title} 
                            .card__image 
                                img(src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTb4NQWXXiV73IwXYTpTdSGPRXFjG5i63_2RQ&usqp=CAU", alt="")
                            .card__content 
                                h2.product__price $19.00
                                p.product__description a very nice product 
                            .card__actions 
                                button.btn Add to Cart
            else 
                h1 No Products