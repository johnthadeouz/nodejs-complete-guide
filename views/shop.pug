extends layouts/main-layout.pug

block content

    main 
        if prods.length > 0
            .grid 
                each product in prods
                    article.card.product-item 
                        header.card__header 
                            h1.product__title #{product.title} 
                        .card__image 
                            img(src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTb4NQWXXiV73IwXYTpTdSGPRXFjG5i63_2RQ&usqp=CAU", alt="")
                        .card__content 
                            h2.product__price $19.00
                            p.product__description a very nice product 
                        .card__actions 
                            button.btn Add to Cart
        else 
            h1 No Products